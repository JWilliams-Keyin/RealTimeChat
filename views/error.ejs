<!-- Although most error messages now are displayed in the login or signup pages, a couple errors such as status:500 will
pop up here on this page... Keeps things tidy. -->

<%- include('partials/header', {title:"error"} ) %>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-danger text-white">
                <h2 class="text-center mb-0">Error</h2>
            </div>
            <div class="card-body text-center">
                <p class="lead"><%= message || 'An error occurred' %></p>
                <a href="/" class="btn btn-primary">Return to Home</a>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>